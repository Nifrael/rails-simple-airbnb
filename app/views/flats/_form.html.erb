<div class="container mt-4">
  <div class="row">
    <div class="col-6 m-auto">
      <div class="flat-form">
        <h1>Nouvel appartement</h1>
        <div class="mt-3">
          <%= simple_form_for(@flat) do |f| %>
          <%= f.input :name %>
          <%= f.input :address %>
          <%= f.input :image %>
          <%= f.input :description %>
          <%= f.input :price_per_night %>
          <%= f.input :number_of_guests %>
          <%= f.submit "Enregistrer", class: 'btn btn-secondary' %>
          <% end %>
          </div>
      </div>
    </div>
  </div>
</div>
